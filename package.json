{
  "name": "pre-commit",
  "version": "1.0.0",
  "description": "trying to make precommit hook",
  "main": "index.js",
  "scripts": {
    "test": "test",
    "pre-commit": "echo pre-commit"
  },
  "author": "Stepan Yefimov",
  "license": "ISC",
  "devDependencies": {
    "commit-msg": "^0.2.2"
  },

  "commitMsg": {
    "invalidCharsInSubject": false,
    "types": {
      "allowedTypes": "^(feat|fix|docs|style|refactor|perf|test|chore)(\\([^)]+\\))?: ",
      "required": true
    },
    "strictTypes": {
      "invalidTypes": "(^[^: ]+: )"
    },
    "capitalized": {
      "capital": false
    },
    "subjectPreferredMaxLineLength": false,
    "subjectMaxLineLength": {
      "length": 100
    },
    "bodyMaxLineLength": {
      "length": 100
    },
    "references": {
      "github": {
        "user": "angular",
        "repo": "angular.js"
      }
    }
  }
}
